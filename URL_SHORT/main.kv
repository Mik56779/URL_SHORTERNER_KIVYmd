Screen:
    MDCard:
        size_hint: None, None
        size: 400, 500
        pos_hint: {"center_x": .5, 'center_y': .5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
            id: URLs
            text: "URL SHORTNER"
            halign: "center"
            theme_text_color: "Custom"
            text_color: "white"
            role: "large"
            size_hint_y: None
            padding: 50
            height: self.texture_size[1]

        MDTextField:
            id: url_input
            mode: "outlined"
            size_hint_x: None
            width: "240dp"
            pos_hint: {'center_x': .5, 'center_y': .5}

            MDTextFieldLeadingIcon:
                icon: "magnify"

            MDTextFieldHintText:
                text: "Enter URL"

            MDTextFieldHelperText:
                text: "Please Enter Your URL"
                mode: "persistent"

            MDTextFieldTrailingIcon:
                icon: "information"

            MDTextFieldMaxLengthText:
                max_text_length: 10

        MDButton:
            style: "elevated"
            pos_hint: {'center_x': .5, 'center_y': .5}
            on_press: app.submit()

            MDButtonIcon:
                icon: "plus"

            MDButtonText:
                text: "Shorten URL"

        MDLabel:
            id: copy_label
            text: "Your Shortened URL Will Be Here"
            halign: "center"
            theme_text_color: "Custom"
            text_color: "white"
            role: "large"
            size_hint_y: None
            padding: 50
            height: self.texture_size[1]

        MDButton:
            id: sub
            style: "elevated"
            pos_hint: {'center_x': .5, 'center_y': .5}
            on_press: app.copy_to_clipboard()

            MDButtonIcon:
                icon: "content-copy"

            MDButtonText:
                text: "Copy URL to ClipBoard"
